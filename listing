Form1.cs:

using System;
using System.IO;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace prak.rabota
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent(); // Инициализация компонентов формы
        }

        // Обработчик клика на кнопку "Начать резервное копирование"
        private async void btnBackup_Click(object sender, EventArgs e)
        {
            string sourceDir = txtSourceDir.Text; // Получаем исходную директорию из текстового поля
            string destDir = txtDestDir.Text;     // Получаем целевую директорию из текстового по-ля

            try
            {
                await BackupFilesAsync(sourceDir, destDir); // Запускаем асинхронное резервное ко-пирование
                lblStatus.Text = "Резервное копирование выполнено успешно."; // Обновляем статус
            }
            catch (Exception ex)
            {
                lblStatus.Text = $"Ошибка: {ex.Message}"; // Обновляем статус в случае ошибки
            }
        }

        // Обработчик клика на кнопку выбора исходной директории
        private void btnSelectSourceDir_Click(object sender, EventArgs e)
        {
            using (FolderBrowserDialog folderDialog = new FolderBrowserDialog())
            {
                if (folderDialog.ShowDialog() == DialogResult.OK)
                {
                    txtSourceDir.Text = folderDialog.SelectedPath; // Устанавливаем путь выбранной директории
                }
            }
        }

        // Обработчик клика на кнопку выбора целевой директории
        private void btnSelectDestDir_Click(object sender, EventArgs e)
        {
            using (FolderBrowserDialog folderDialog = new FolderBrowserDialog())
            {
                if (folderDialog.ShowDialog() == DialogResult.OK)
                {
                    txtDestDir.Text = folderDialog.SelectedPath; // Устанавливаем путь выбранной директории
                }
            }
        }

        // Асинхронный метод для резервного копирования файлов и директорий
        private async Task BackupFilesAsync(string sourceDir, string destDir)
        {
            if (!Directory.Exists(sourceDir)) // Проверяем, существует ли исходная директория
            {
                throw new DirectoryNotFoundException($"Исходная директория не существует: {sourceDir}");
            }

            if (!Directory.Exists(destDir)) // Создаем целевую директорию, если она не существует
            {
                Directory.CreateDirectory(destDir);
            }

            // Копируем все файлы из исходной директории в целевую
            foreach (string filePath in Directory.GetFiles(sourceDir))
            {
                string destFilePath = Path.Combine(destDir, Path.GetFileName(filePath));
                await CopyFileAsync(filePath, destFilePath); // Асинхронное копирование файла
            }

            // Рекурсивно копируем поддиректории
            foreach (string dirPath in Directory.GetDirectories(sourceDir))
            {
                string destDirPath = Path.Combine(destDir, Path.GetFileName(dirPath));
                await BackupFilesAsync(dirPath, destDirPath); // Рекурсивный вызов для поддиректорий
            }
        }

        // Асинхронный метод для копирования одного файла
        private async Task CopyFileAsync(string sourceFile, string destFile)
        {
            using (FileStream sourceStream = new FileStream(sourceFile, FileMode.Open)) // Открываем исходный файл
            using (FileStream destStream = new FileStream(destFile, FileMode.Create)) // Открываем целевой файл
            {
                await sourceStream.CopyToAsync(destStream); // Асинхронное копирование содержимого файла
            }
        }
    }
}

